<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">
    <entity class="org.agoncal.quarkus.jdbc.Artist">
        <table name="t_artists"></table>
        <attributes>
            <id name="id">
                <generated-value strategy="AUTO"></generated-value>
            </id>
            <basic name="name">
                <column length="100" nullable="false"></column>
            </basic>
            <basic name="bio">
                <column length="3000" ></column>
            </basic>
            <basic name="createdDate">
                <column name="created_date" ></column>
            </basic>
        </attributes>

    </entity>
</entity-mappings>
